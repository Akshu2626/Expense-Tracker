<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/stylepro2.css">
    <link rel="stylesheet" href="/stylesheets/stylepro.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
</head>

<body>
    <div id="mob">
        <%- include('mobNav') %>

        
    </div>

    <script>
        let flag = 0;
        const item = document.querySelector('.item');
        let h4 = document.querySelector('h4');
        const menu = document.querySelector('.ri-menu-3-fill');
        let can = document.querySelector('.hai');
        can.addEventListener('click', () => {
            if (flag == 0) {
                can.innerHTML = `<i class="ri-close-line"></i>`;
                item.style.display = 'flex';
                h4.style.opacity = 0;
                flag = 1;
            } else if (flag == 1) {
                can.innerHTML = `<i class="ri-menu-3-fill"></i>`;
                item.style.display = 'none';
                h4.style.opacity = 1;
                flag = 0
            }
        })


    </script>



    <!-- lap -->

    <div id="main">
        <div id="box1">
            <h4>Expense</h4><br>
            <div class="dp">
                <i class="ri-image-add-line"></i>
            </div><br>
            <hr><br><br><br>
            <!-- menu here -->
<%- include('lapnav') %>

            <hr><br>

            
            <div class="helps"> <i class="ri-question-line"></i> <a href="/signout">Sign out</a> </div><br>


        </div>
        <div id="box2">

            <h2>Expense Tracker</h2>

            <div class="container">
                <h4>Your Balance</h4>
                <h1 id="balance">$0.00</h1>

                <div class="inc-exp-container">
                    <div>
                        <h4>Income</h4>
                        <p id="money-plus" class="money plus">+$0.00</p>
                    </div>
                    <div>
                        <h4>Expense</h4>
                        <p id="money-minus" class="money minus">-$0.00</p>
                    </div>
                </div>

                <h3>History</h3>
                <ul id="list" class="list">
                    <!-- <li class="minus">
        Cash <span>-$400</span><button class="delete-btn">x</button>
        </li> -->
                </ul>

                <h3>Add new transaction</h3>
                <form id="form">
                    <div class="form-control">
                        <label for="text">Text</label>
                        <input type="text" id="text" placeholder="Enter text..." />
                    </div>
                    <div class="form-control">
                        <label for="amount">Amount <br />
                            (negative - expense, positive - income)</label>
                        <input type="number" id="amount" placeholder="Enter amount..." />
                    </div>
                    <button class="btn">Add transaction</button>
                </form>
            </div>


            <!-- end box 2 -->
        </div>

    </div>

    <script src="/javascripts/scriptPro.js"></script>

</body>

</html>